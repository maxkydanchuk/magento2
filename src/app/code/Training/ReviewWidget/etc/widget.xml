<?xml version="1.0" encoding="UTF-8"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="Training\ReviewWidget\Block\Widget\ReviewWidget" id="training_reviewwidget">
        <label>Review Widget</label>
        <description>Example</description>
        <parameters>
            <parameter name="title" sort_order="10" visible="true" xsi:type="text">
                <label>Title</label>
            </parameter>
            <parameter name="first_review_text" sort_order="10" visible="true" xsi:type="text">
                <label>Review Text</label>
            </parameter>
            <parameter name="first_review_author" sort_order="10" visible="true" xsi:type="text">
                <label>Review Author</label>
            </parameter>
            <parameter name="first_review_photo" xsi:type="block" visible="true" sort_order="10">
                <label translate="true">Photo</label>
                <block class="Training\ReviewWidget\Block\Adminhtml\Widget\ImageChooser">
                    <data>
                        <item name="button" xsi:type="array">
                            <item name="open" xsi:type="string">Choose Image...</item>
                        </item>
                    </data>
                </block>
            </parameter>
            <parameter name="title" sort_order="10" visible="true" xsi:type="text">
                <label>Title</label>
            </parameter>
            <parameter name="second_review_text" sort_order="10" visible="true" xsi:type="text">
                <label>Review Text</label>
            </parameter>
            <parameter name="second_review_author" sort_order="10" visible="true" xsi:type="text">
                <label>Review Author</label>
            </parameter>
            <parameter name="second_review_photo" xsi:type="block" visible="true" sort_order="10">
                <label translate="true">Photo</label>
                <block class="Training\ReviewWidget\Block\Adminhtml\Widget\ImageChooser">
                    <data>
                        <item name="button" xsi:type="array">
                            <item name="open" xsi:type="string">Choose Image...</item>
                        </item>
                    </data>
                </block>
            </parameter>
        </parameters>
    </widget>
</widgets>
